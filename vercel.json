{
  "version": 2,

  "redirects": [
    { "source": "/index.html", "destination": "/", "permanent": true },
    { "source": "/privacy",    "destination": "/privacy.html", "permanent": true },
    { "source": "/contact",    "destination": "/contact.html", "permanent": true }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "index, follow" }
      ]
    }
  ]
}
